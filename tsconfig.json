{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "lib": ["dom"],
    "paths": {
      "rsg-components/*": ["src/client/rsg-components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
